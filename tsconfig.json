{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "dist",
        "rootDirs": ["lib","spec"],
        "baseUrl": "src",
        "declaration": true,
        "paths":{
            "components/*":[
                "components/*"
            ]            
        },
        "moduleResolution":"node",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "sourceMap": false,    
        "noEmitOnError":false,
        "noEmitHelpers":true,
        "noFallthroughCasesInSwitch":true,
        "noImplicitReturns":false,
        "lib":[
            "es2015.promise",
            "es2015.collection",
            "es2015.iterable",
            "dom",
            "es5"
        ],
        "pretty":true,
        "importHelpers": true,
        "emitDecoratorMetadata": true,
        "alwaysStrict":true
    },
    "filesGlob": [
        "lib/**/*.ts",
        "types/**/*.d.ts"
    ],
    "exclude": [
        "build",
	    "dist",
        "node_modules"
    ],
    "compileOnSave": true
}

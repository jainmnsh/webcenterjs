{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "dist",
        "rootDirs": ["lib","spec"],
        "baseUrl": "src",
        "declaration": true,
        "moduleResolution":"node",
        "noImplicitAny": false,
        "sourceMap": false,    
        "noEmitOnError":true,
        "noEmitHelpers":true,
        "noFallthroughCasesInSwitch":true,
        "lib":[
            "es2015",
            "dom",
            "es5"
        ],
        "pretty":true,
        "importHelpers": true,
        "alwaysStrict":true
    },
    "filesGlob": [
        "lib/**/*.ts",
        "types/**/*.d.ts"
    ],
    "exclude": [
        "build",
	    "dist",
        "node_modules"
    ],
    "compileOnSave": true
}

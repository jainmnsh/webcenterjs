{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "dist",
        "rootDirs": ["lib","spec"],
        "baseUrl": "lib",
        "declaration": true,
        "moduleResolution":"node",
        "noImplicitAny": false,
        "sourceMap": true,    
        "noEmitOnError":true,
        "noEmitHelpers":true,
        "noFallthroughCasesInSwitch":true,
        "lib":[
            "es2015",
            "dom",
            "es5"
        ],
        "pretty":false,
        "importHelpers": true,
        "alwaysStrict":true
    },
    "include": [
        "lib/**/*.ts",
        "spec/**/*.spec.ts"
    ],
    "exclude": [
        "build",
	    "dist",
        ".history",
        "node_modules"
    ],
    "compileOnSave": true
}
